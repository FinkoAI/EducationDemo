<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.sibhtc.educationdemo" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FirstFragmentActivity" android:screenOrientation="landscape"></activity>
        <activity android:name=".SecondFragmentActivity" android:screenOrientation="landscape"></activity>
        <activity android:name=".StudentsActivity" android:parentActivityName=".MainActivity" android:screenOrientation="landscape"></activity>
        <activity android:name=".LearningActivity" android:parentActivityName=".MainActivity" android:screenOrientation="landscape"></activity>
        <activity android:name=".ExamActivity" android:parentActivityName=".MainActivity" android:screenOrientation="landscape"></activity>
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
        <service android:name=".services.WearMessageListenerService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>
    </application>


</manifest>
